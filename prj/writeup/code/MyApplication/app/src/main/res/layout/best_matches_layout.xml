<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bm_imageView"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"/>

            <TextView
                android:id="@+id/bm_tx_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/bm_imageView"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/bm_tx_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/bm_imageView"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="6sp"
                android:layout_below="@+id/bm_tx_name"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/bm_tx_phoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/bm_imageView"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="6sp"
                android:layout_below="@+id/bm_tx_email"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/bm_tx_Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/bm_tx_phoneNo"
                android:layout_marginLeft="18sp"
                android:layout_marginTop="6sp"
                android:layout_below="@+id/bm_tx_email"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/bm_tx_Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/bm_imageView"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="6sp"
                android:layout_below="@+id/bm_tx_phoneNo"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/bm_tx_Age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/bm_tx_Gender"
                android:layout_marginLeft="29sp"
                android:layout_marginTop="6sp"
                android:layout_below="@+id/bm_tx_phoneNo"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/bm_tx_m_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/bm_tx_Age"
                android:layout_marginLeft="29sp"
                android:layout_marginTop="6sp"
                android:layout_below="@+id/bm_tx_phoneNo"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/bm_tx_City"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="8sp"
                android:layout_below="@+id/bm_imageView"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/bm_tx_Country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="8sp"
                android:layout_below="@+id/bm_imageView"
                android:layout_toRightOf="@+id/bm_tx_City"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/bm_tx_Nationality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="8sp"
                android:layout_below="@+id/bm_imageView"
                android:layout_toRightOf="@+id/bm_tx_Country"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/bm_tx_URA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="8sp"
                android:layout_below="@+id/bm_imageView"
                android:layout_toRightOf="@+id/bm_tx_Nationality"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/bm_tx_Occupation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="8sp"
                android:layout_below="@+id/bm_imageView"
                android:layout_toRightOf="@+id/bm_tx_URA"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/bm_tx_Rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="8sp"
                android:layout_below="@+id/bm_tx_City"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/bm_tx_Type_Of_House"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="8sp"
                android:layout_below="@+id/bm_tx_City"
                android:layout_toRightOf="@+id/bm_tx_Rent"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/bm_tx_No_of_rooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="8sp"
                android:layout_below="@+id/bm_tx_City"
                android:layout_toRightOf="@+id/bm_tx_Type_Of_House"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/bm_tx_Occupancy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="8sp"
                android:layout_below="@+id/bm_tx_City"
                android:layout_toRightOf="@+id/bm_tx_No_of_rooms"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/bm_tx_Food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="8sp"
                android:layout_below="@+id/bm_tx_Rent"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/bm_tx_Cooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="8sp"
                android:layout_below="@+id/bm_tx_Rent"
                android:layout_toRightOf="@+id/bm_tx_Food"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/bm_tx_No_of_roommates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="8sp"
                android:layout_below="@+id/bm_tx_Rent"
                android:layout_toRightOf="@+id/bm_tx_Cooking"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="50sp"
                android:layout_height="20sp"
                android:id="@+id/bm_smoking_imageView"
                android:layout_below="@+id/bm_tx_Cooking"
                android:layout_marginTop="8sp"
                android:layout_alignLeft="@+id/bm_ac_imageView"
                android:layout_alignRight="@+id/bm_ac_imageView"/>

            <ImageView
                android:layout_width="50sp"
                android:layout_height="20sp"
                android:id="@+id/bm_alcho_imageView"
                android:layout_below="@+id/bm_tx_Cooking"
                android:layout_toRightOf="@+id/bm_smoking_imageView"
                android:layout_marginTop="8sp"
                android:layout_alignLeft="@+id/bm_tv_imageView"
                android:layout_alignRight="@+id/bm_tv_imageView"/>

            <TextView
                android:id="@+id/bm_tx_Message"
                android:layout_width="190sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="8sp"
                android:layout_below="@+id/bm_tx_Food"/>

            <ImageView
                android:layout_width="50sp"
                android:layout_height="20sp"
                android:id="@+id/bm_ac_imageView"
                android:layout_below="@+id/bm_tx_Cooking"
                android:layout_toRightOf="@+id/bm_p_imageView3"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="39sp" />

            <ImageView
                android:layout_width="50sp"
                android:layout_height="20sp"
                android:id="@+id/bm_tv_imageView"
                android:layout_below="@+id/bm_tx_Cooking"
                android:layout_toRightOf="@+id/bm_ac_imageView"
                android:layout_alignTop="@+id/bm_ac_imageView"
                android:layout_alignBottom="@+id/bm_ac_imageView"
                android:layout_marginLeft="10sp" />

            <ImageView
                android:layout_width="50sp"
                android:layout_height="20sp"
                android:id="@+id/bm_internet_imageView"
                android:layout_below="@+id/bm_tx_Cooking"
                android:layout_toRightOf="@+id/bm_tv_imageView"
                android:layout_alignTop="@+id/bm_ac_imageView"
                android:layout_alignBottom="@+id/bm_ac_imageView"
                android:layout_marginLeft="10sp" />

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:id="@+id/bm_p_imageView1"
                android:layout_below="@+id/bm_tx_Message"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="12sp"
                />

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:id="@+id/bm_p_imageView2"
                android:layout_below="@+id/bm_tx_Message"
                android:layout_toRightOf="@+id/bm_p_imageView1"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="12sp"
                />

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:id="@+id/bm_p_imageView3"
                android:layout_below="@+id/bm_tx_Message"
                android:layout_toRightOf="@+id/bm_p_imageView2"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="12sp"
                />

            <ImageView
                android:layout_width="50sp"
                android:layout_height="20sp"
                android:id="@+id/bm_geaser_imageView"
                android:layout_below="@+id/bm_ac_imageView"
                android:layout_toRightOf="@+id/bm_p_imageView3"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                />

            <ImageView
                android:layout_width="50sp"
                android:layout_height="20sp"
                android:id="@+id/bm_wm_imageView"
                android:layout_below="@+id/bm_tx_Message"
                android:layout_toRightOf="@+id/bm_geaser_imageView"
                android:layout_alignTop="@+id/bm_geaser_imageView"
                android:layout_alignBottom="@+id/bm_geaser_imageView"
                android:layout_marginLeft="10sp" />

            <ImageView
                android:layout_width="50sp"
                android:layout_height="20sp"
                android:id="@+id/bm_fridge_imageView"
                android:layout_below="@+id/bm_tx_Message"
                android:layout_toRightOf="@+id/bm_wm_imageView"
                android:layout_alignTop="@+id/bm_geaser_imageView"
                android:layout_alignBottom="@+id/bm_geaser_imageView"
                android:layout_marginLeft="10sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>