<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="layout.ContactUsFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/contact_us_tittle"
                android:text="Contact Us!!"
                android:gravity="center_horizontal"
                android:textSize="35sp"
                android:textStyle="bold"/>


            <EditText
                android:id="@+id/phone_no_data"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:hint="Phone Number"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:singleLine="true"
                android:layout_marginTop="13dp"
                android:textColor="@color/input_login"
                android:textColorHint="@color/input_login_hint"
                android:layout_below="@+id/contact_us_tittle"
                />

            <EditText
                android:id="@+id/subject_data"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:hint="Subject"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:singleLine="true"
                android:layout_marginTop="13dp"
                android:textColor="@color/input_login"

                android:textColorHint="@color/input_login_hint"
                android:layout_below="@+id/phone_no_data"
                />

            <EditText
                android:id="@+id/message_data"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:hint="Message"
                android:padding="10dp"
                android:layout_marginTop="13dp"
                android:textColor="@color/input_login"
                android:textColorHint="@color/input_login_hint"
                android:layout_below="@+id/subject_data"
                />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dip"
                android:background="@color/blue_ropm"
                android:text="Submit"
                android:textSize="15dp"
                android:layout_below="@+id/message_data"/>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>
